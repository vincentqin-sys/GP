{
    "manifest_version": 3,
    "name": "GP-LongHu",
    "version": "1.0",

    "description": "GP-LongHu",

	"permissions": [
		"http://data.10jqka.com.cn/*",
		"tabs",
		"webRequest",
		"webRequestBlocking",
		"storage",
		"nativeMessaging",
		"declarativeNetRequest", "declarativeNetRequestFeedback"
	],
	
	"declarative_net_request": {
		"rule_resources": [
			{"id": "ruleset_1", "enabled": true,  "path": "rules_1.json"}
		]
	},
	
	"background": {
		"scripts": ["jquery-3.6.min.js", "bg.js"],
		"persistent": true
	},
	
    "content_scripts": [
        {
			"matches": ["http://data.10jqka.com.cn/market/longhu/*"],
            "run_at": "document_idle",
            "js": ["jquery-3.6.min.js", "longhu-content.js"],
			"all_frames" : true
		}
    ],

	"web_accessible_resources": ["longhu-name-parse.js", "longhu-data-parse.js"]
}